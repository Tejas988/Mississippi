<%- include('../includes/head.ejs') %> 
<body style="background-image: linear-gradient(to left,#12161a,#161e25);text-align: center;">
    <%- include('../includes/nav.ejs') %> 

    <div class="container-fluid" style="margin-top: 3%">
     
    
      
      <div style="display: flex;justify-content: space-around;align-items: center;margin-top: 6%;">
        <% if (prods.length>0) { %>
         <% for (x in prods) { %>
        <div class="card"  style="width: 18rem;display: inline;box-shadow: 7px 7px 5px dimgrey;">
          <img src="/<%= prods[x].imageURL %>" style="width:100%;height:250px;" class="card-img-top" alt="...">
          <div class="card-body">
            <h2 class="card-title"><%= prods[x].title %></h5>
          <hr style=" border-top: solid 2px  gray; width: 100%;">
            <h5 class="card-title">Price : <%= prods[x].price %></h2>
            <a href="/products/<%=prods[x]._id%>" class="btn btn-primary">Details</a>
            <div style="display: inline-block;">
              <% if (isAuthenticated) {%> 
            <form method="POST" action="/cart">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="hidden" name="id" value="<%=prods[x]._id%>">
              <input type="hidden" name="price" value="<%= prods[x].price %>">
              <button type="submit" class="btn btn-warning" >Add to Cart</button>  
            </form>
          <% } %> 
          </div>
          </div>
        </div> 
      <% } %>
        <% }%>
      </div>
      </div>
      <div style="display: flex;justify-content: center; margin-top: 4%; margin-bottom: 3%;">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
    
          <li class="page-item <% if(!hasPrevPg)  {%> disabled <% } %>"><a class="page-link " href="/products?page=<%= previousPg %>">Previous</a></li>
       
          <% if(currPg!=1) { %> 
          <li class="page-item "><a class="page-link " href="/products?page=1">1</a></li>
          <% } %> 
          <li class="page-item active"><a class="page-link " href="/products?page=<%= currPg %>"><%= currPg %></a></li>
          <% if(lastPg!=currPg) { %>
          <li class="page-item "><a class="page-link " href="/products?page=<%= lastPg %>"><%= lastPg %></a></li>
          <% } %> 
          
          <li class="page-item <% if(!hasNextPg) {%> disabled <% } %>"><a class="page-link" href="/products?page=<%= nextPg %>">Next</a></li>
         
         
        </ul>
      </nav>
      </div>
    </div>
    <div  style="text-align: center; padding: 36px;
    background-color: #66BFBF;">
      <a class="footer-link" style="color: #11999E;"   href="https://www.linkedin.com/">LinkedIn</a>
      <a class="footer-link" style="color: #11999E;" href="https://twitter.com/">Twitter</a>
      <p style="color: #EAF6F6;font-size: 15px;">Â© 2020 MISSISSIPPI.</p>
    </div>
    <%- include('../includes/foot.ejs') %> 
  </body>
</html>
