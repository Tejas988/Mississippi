<%- include('../includes/head.ejs') %> 
  <body style="background-image: url('https://imgur.com/XzdhOfW.png');">
    <%- include('../includes/nav.ejs') %> 
    <div class="container" style="margin-top: 2%;">
      <div class="list-group">
        <% if(cartProds.length>0) { %>
          <% for (x of cartProds) { %>
        <a href="#" class="list-group-item list-group-item-action d-flex" style="flex-direction: row;">
        <div style="flex: 1;">
          <img src="<%= x.productData.imageURL %>" style="width: 150px;height: 150px;margin-left: 45px;">
        </div>
        <div style="flex: 3;">
            <h4 class="mb-1"><%= x.productData.title %></h4>
          <p class="mb-1">Price : <%= x.productData.price %></p>
          <p class="mb-1">Total Price : <%= x.productData.price*x.qty %></p>
          <small><%= x.productData.description %> </small>
      </div>
          <div style="flex: 0.5;">
          <h6><em>Quantity <%= x.qty %></em></h6>
          <form method="POST" action="/delete-cart" style="margin-top: 90px;">
            <input type="hidden" name="id" value="<%= x.productData._id %>">
            <input type="hidden" name="price" value="<%= x.productData.price %>">
            <button class="btn btn-danger" type="submit">Delete </button>
          </form>
        </div>
        </a>
        <% } %>
        <a href="/add-order" class="btn btn-dark">Add Order</a>
        <% } %>
      </div>
    </div>

    <%- include('../includes/foot.ejs') %> 
</body>
</html>
