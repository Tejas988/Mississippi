<%- include('../includes/head.ejs') %> 
<body style="background-image: linear-gradient(to left,#2D3436
,#000000)">
    <%- include('../includes/nav.ejs') %>

    <div class="container" style="margin-top: 2%;">
      <div class="list-group">
          <% for (x of cartProds) { %>
        <a href="#" class="list-group-item list-group-item-action d-flex" style="flex-direction: row;">
        <div style="flex: 1;">
          <img src="/<%= x.productData.imageURL %>" style="width: 150px;height: 150px;margin-left: 45px;">
        </div>
        <div style="flex: 3;">
            <h4 class="mb-1"><%= x.productData.title %></h4>
          <p class="mb-1">Price : <%= x.productData.price %></p>
          <p class="mb-1">Total Price : <%= x.productData.price*x.qty %></p>
          <small><%= x.productData.description %> </small>
      </div>
          <div style="flex: 0.5;">
          <h6><em>Quantity <%= x.qty %></em></h6>
        </div>
        </a>
        <% } %>
      </div>
    </div>
    <div style="display: flex;justify-content: center;align-items: center; margin: 4%;">
      <form action="/add-order" method="POST">
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="pk_test_51H1AlYBG4sAHCewRUScHF6mFNlDpkXtgrjnwft88pKn8pCQYdSVURPByy4Q2Mwhc8m34aeuXzDZbDBnD6UxF3d2V00wDa82kFF"
          data-amount="<%= totalPrice *100 %>"
          data-name="Your Order"
          data-description="All the items you ordered"
          data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
          data-locale="auto"
          data-currency="inr">
        </script>
      </form>
    </div>
    <div style="text-align: center;">
      <h3 style="color: white;">Total Amount : <%= totalPrice %> </h3>
    </div>
    
    <%- include('../includes/foot.ejs') %> 
</body>
</html>
